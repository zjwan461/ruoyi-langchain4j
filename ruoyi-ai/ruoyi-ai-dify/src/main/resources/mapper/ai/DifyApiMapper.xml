<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ai.dify.mapper.DifyApiMapper">
    
    <resultMap type="DifyApi" id="DifyApiResult">
        <result property="id"    column="id"    />
        <result property="urlPrefix"    column="url_prefix"    />
        <result property="apiKey"    column="api_key"    />
        <result property="responseType"    column="response_type"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="dayLmtPerClient"    column="day_lmt_per_client"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectDifyApiVo">
        select id, url_prefix, api_key, response_type, create_by, create_time, update_by, update_time, day_lmt_per_client, name from dify_api
    </sql>

    <select id="selectDifyApiList" parameterType="DifyApi" resultMap="DifyApiResult">
        <include refid="selectDifyApiVo"/>
        <where>  
            <if test="urlPrefix != null  and urlPrefix != ''"> and url_prefix like concat('%', #{urlPrefix}, '%')</if>
            <if test="apiKey != null  and apiKey != ''"> and api_key like concat('%', #{apiKey}, '%')</if>
            <if test="responseType != null  and responseType != ''"> and response_type = #{responseType}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectDifyApiById" parameterType="Long" resultMap="DifyApiResult">
        <include refid="selectDifyApiVo"/>
        where id = #{id}
    </select>

    <insert id="insertDifyApi" parameterType="DifyApi" useGeneratedKeys="true" keyProperty="id">
        insert into dify_api
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="urlPrefix != null and urlPrefix != ''">url_prefix,</if>
            <if test="apiKey != null">api_key,</if>
            <if test="responseType != null and responseType != ''">response_type,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="dayLmtPerClient != null">day_lmt_per_client,</if>
            <if test="name != null and name != ''">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="urlPrefix != null and urlPrefix != ''">#{urlPrefix},</if>
            <if test="apiKey != null">#{apiKey},</if>
            <if test="responseType != null and responseType != ''">#{responseType},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="dayLmtPerClient != null">#{dayLmtPerClient},</if>
            <if test="name != null and name != ''">#{name},</if>
         </trim>
    </insert>

    <update id="updateDifyApi" parameterType="DifyApi">
        update dify_api
        <trim prefix="SET" suffixOverrides=",">
            <if test="urlPrefix != null and urlPrefix != ''">url_prefix = #{urlPrefix},</if>
            <if test="apiKey != null">api_key = #{apiKey},</if>
            <if test="responseType != null and responseType != ''">response_type = #{responseType},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="dayLmtPerClient != null">day_lmt_per_client = #{dayLmtPerClient},</if>
            <if test="name != null and name != ''">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDifyApiById" parameterType="Long">
        delete from dify_api where id = #{id}
    </delete>

    <delete id="deleteDifyApiByIds" parameterType="String">
        delete from dify_api where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>